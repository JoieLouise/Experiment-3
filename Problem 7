#include <iostream>

using namespace std;

int main()
{
    int a, sum;

a = 0;
sum = 0;

cout << "Enter any number: ";
    cin >> a;
    
while (a>0)
	{
		for (int b = 1; b <= a; b++) 
   		{
        sum += b;
    	}
	 cout << "The sum from the numbers of 1 to "<< a << " is " << sum << "." << endl;
	 cout << "Enter any number: ";
    cin >> a;
    sum = 0;
	}

while(a != 0 && a <= 0)
{

    cout<<"Thank You!";
    break;
}
    return 0;
}
