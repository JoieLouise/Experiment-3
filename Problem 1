#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
	int price, choice, hours;
cout<<"MANG PIOLO'S INTERNET PACKAGES!:"<<endl;

cout<<"1) Package A: For P995/mo 10 hrs of access are provided.";
cout<<"\n\tAdditional hours are P20/hr.";

cout<<"\n\n2) Package B: For P1495/mo 20 hrs of access are provided. Additional hours are P10/hr";
cout<<"\n\tAdditional hours are P10/hr.";

cout<<"\n\n3) Package C: For P1995/mo of unlimited access is provided."<<endl;

cout<<"\nChoose your Package Subscription : "<<endl;

cin>> choice ;

cout<< "How many hours did you accumulated?" << endl;

cin>> hours ;


if (choice == 1)
		{
			price = 995;
			cout << "\nTotal Monthly Bill : " << price + (hours - 10) * 20<< endl;
			cout << "\n\nThank you for Subscribing!" << endl;
		}
else if (choice == 2) 
		{
			price = 1495;
			cout << "\nTotal Monthly Bill : " << price + (hours - 20) * 10 << endl;
			cout << "\n\nThank you for Subscribing!" << endl;
		}
		
else if (choice == 3)
		{
		
			price = 1995;
			cout << "\nTotal Monthly Bill : " << price << endl;
			cout << "\n\nThank you for Subscribing!" << endl;
		}
	return 0;	
		
}
